	<%! String str;
	int j = 0;
	int flag = 0;
	char[] arr;
	
	%>
	<%	
	char[] arr2 = new char[10];
	str = request.getParameter("num1");
	if(str != null){
		char[] arr = str.replace("\\s+", "").toCharArray();	
	}	
	%>
	
	<% 
	if(arr != null){
		for(int i = arr.length -1; i >= 0; i--){
			arr2[j] = arr[i]; 
			j++;
		}
		
		if(arr2.toString().equals(str)){
			flag = 1;
		}
		%>
	<%if(flag == 1){ %>
		<h2> <%=str %> is palindrome string</h2>
